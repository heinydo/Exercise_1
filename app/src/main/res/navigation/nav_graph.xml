<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/BMI_Calculator">

    <fragment
        android:id="@+id/BMI_Calculator"
        android:name="com.example.exercise_1.screens.BMICalculator"
        android:label="fragment_bmi__calculator"
        tools:layout="@layout/fragment_bmi__calculator" >
        <action
            android:id="@+id/action_BMI_Calculator_to_BMI_Result"
            app:destination="@id/BMI_Result" />
    </fragment>
    <fragment
        android:id="@+id/BMI_Result"
        android:name="com.example.exercise_1.screens.BMIResult"
        android:label="fragment_bmi__result"
        tools:layout="@layout/fragment_bmi__result" >
        <action
            android:id="@+id/action_BMI_Result_to_BMI_Calculator"
            app:destination="@id/BMI_Calculator" />
    </fragment>
</navigation>